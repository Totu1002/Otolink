<!DOCTYPE html>
<html>
  <head>
    <title>Otolink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "Otolink", home_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class=""><%= link_to "ホーム", home_path %></li>
          <% if user_signed_in? %>
            <li class=""><%= link_to "Otolinkとは",about_path %></li>
            <li class=""><%= link_to "記事を探す", recruit_search_path  %></li>
            <li class=""><%= link_to "メンバーを探す",user_search_path  %></li>
            <li class=""><%= link_to "記事の管理" %></li>
            <li class=""><%= link_to "マイページ", user_path(current_user.id) %></li>
            <li class=""><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %>
            <li class=""><%= link_to 'ユーザー一覧', admins_users_path, class: '' %></li>
            <li class=""><%= link_to '投稿記事一覧', admins_recruits_path, class: '' %></li>
            <li class=""><%= link_to 'パート一覧', home_path, class: '' %></li>
            <li class=""><%= link_to 'ジャンル一覧', home_path, class: '' %></li>
            <li class=""><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: '' %></li>
          <% else %>
            <li class=""><%= link_to "Otolinkとは",about_path %></li>
            <li class=""><%= link_to "記事を探す", recruit_search_path  %></li>
            <li class=""><%= link_to "メンバーを探す",user_search_path  %></li>
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
            <li><%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %></li>
          <% end %>
        </ul>
      </div>
    </nav>


  </header>
  <body>
    <div id="wrapper">
      <%= yield %>
    </div>
  </body>
  <footer class="footer">
    <div class="container">
      <div class="row">
        <p class="text-muted">Portfolio App Otolink.</p>
      </div>
    </div>
  </footer>
</html>

<div class="container login-wrapper">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="page_title">
        <h2>管理者ログイン</h2>
      </div>
      <h4>ポートフォリオ用：管理者情報</h4>
      <p>
        <strong>name  : </strong>admin<br>
        <strong>email : </strong>admin@admin.com<br>
        <strong>pass  : </strong>adminpass<br>
      </p>
      <div class="form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-item">
            <div class="form-item-input">
              <%= f.label :email,"管理者メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <div class="form-item">
            <div class="form-item-input">
              <%= f.label :password, "管理者パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>
          <div class="button-panel" style="width: 60%; padding-bottom: 3%;">
            <%= f.submit "ログイン", class: "btn btn-bloc btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
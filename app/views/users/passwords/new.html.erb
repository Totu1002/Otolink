<div class="container">
  <div class="row">
    <div class="form-wrapper">
      <h1>再設定フォーム</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="form">
          <div class="form-item">
            <div class="form-item-input">
              <%= f.label :email, "メールアドレス" %><br />
             <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <div class="button-panel">
           <%= f.submit "パスワード再設定手順を送信", class: "btn btn-block btn-warning" %>
          </div>
        </div>
      <% end %>
      <div class="form-footer">
        <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-block btn-primary" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-block btn-primary" %>
      </div>
    </div>
  </div>
</div>
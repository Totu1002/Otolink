<div class="container">
  <div class="row">
    <h2>ユーザーログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "次回から自動でログイン" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    <h4>登録がお済みでない方</h4>
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p>
        <%= link_to "こちら", new_registration_path(resource_name) %>  から新規登録を行なってください。<br />
      </p>
    <% end %>
    <div class="field">
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
      <% end %>
    </div>
    <h4>ポートフォリオ用：管理者ログイン</h4>
    <p>
      <%= link_to "管理者ログイン", admin_session_path, class: "btn btn-default btn-warning" %>
    </p>
  </div>
</div>
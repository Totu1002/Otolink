<div class="container login-wrapper">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="page_title">
        <h2>ユーザーログイン</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form">
          <div class="form-item">
            <div class="form-item-input">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <div class="form-item">
            <div class="form-item-input">
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>
          <div class="button-panel">
            <%= f.submit "ログイン", class: "btn btn-block btn-primary" %>
          </div>
        </div>
      <% end %>
      <div class="form-footer">
        <h4>登録がお済みでない方</h4>
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <p>
            <%= link_to "こちら", new_registration_path(resource_name), class: "top__link" %>
        から新規登録を行なってください。<br />
          </p>
        <% end %>
        <div class="form-footer">
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name !=
         "registrations" %>
            <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name),class: "top__link" %><br />
          <% end %>
        </div>
        <h4>ポートフォリオ用：ゲストログイン</h4>
        <div class="button-panel">
          <p>
            <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-block btn-warning" %>
          </p>
        </div>
        <h4>ポートフォリオ用：管理者ログイン</h4>
        <div class="button-panel">
          <p>
            <%= link_to "管理者ログイン", admin_session_path, class: "btn btn-block btn-warning" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

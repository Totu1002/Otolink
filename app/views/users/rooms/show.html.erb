<h1>Users::Rooms#show</h1>
<p>Find me in app/views/users/rooms/show.html.erb</p>
<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>送信者</th>
          <th>メッセージ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @room.messages.each do |message| %>
          <tr>
            <td>
              <%= link_to user_path(message.user), message.user.name %>
            </td>
            <td>
              <%= message.body %>
            </td>
            <td>
              <% if message.user == current_user %>
                <%= link_to '削除', message, method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, class: "btn btn-defaul btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= form_with model: @message, url: messages_path, local: true do |f| %>
      <%= f.text_area :body, size: "20x10", class: "form-control" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "送信", class: "btn btn-info btn-block" %>
    <% end %>
  </div>
</div>
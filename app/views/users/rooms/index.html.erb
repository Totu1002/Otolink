<div class="container page-wrapper">
  <div class="row">
    <div class="col-xs-12">
      <div class="page_title">
        <h2>メッセージ一覧</h2>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>メッセージ相手</th>
            <th>メッセージ内容</th>
          </tr>
        </thead>
        <tbody>
          <% @another_entries.each do |entry|%>
            <tr>
              <td class="col-xs-1">
                <%= attachment_image_tag(entry.user, :profile_image, size: "100x100",style: "border-radius: 50%;", fallback: "no_image.jpg") %>
              </td>
              <td class="col-xs-3">
                <%= link_to entry.user.name, user_path(entry.user),class: "top__link" %>
                <% if entry.user.is_member == "無効" %>
                  <p><退会済みユーザー></p>
                <% end %>
              </td>
              <td class="col-xs-8">
                <%= link_to Message.find_by(id: entry.room.message_ids.last)&.body, room_path(entry.room),class: "top__link" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
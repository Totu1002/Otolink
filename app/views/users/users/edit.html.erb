
<div class="container page-wrapper">
  <div class="row">
    <div class="col-xs-12">
      <div class="page_title">
        <h2>プロフィール編集ページ</h2>
      </div>
      <p class="alert-success"><%= notice %></p>
      <p class="alert-danger"><%= alert %></p>
    </div>
    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="col-xs-6 col-xs-offset-3" style="text-align: center;">
        <%= attachment_image_tag(@user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg", id: "img_prev") %>
      </div>
      <div class="col-xs-6 col-xs-offset-3 justify-content-center" style="text-align: center;">
        <%= f.label :profile_image, "プロフィール画像" %>
      </div>
      <div class="item_image_btn">
        <%= f.attachment_field :profile_image, id: "file" %>
      </div>
      <div class="col-xs-6 col-xs-offset-3" id="img_field" onClick="$('#file').click()" >
        <p class="btn btn-default btn-success bs_btn_wide">画像選択</p>
      </div>
      <div class="col-xs-12">
        <table class="table">
          <tbody>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :name, "ニックネーム" %><br />
                  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :email, "メールアドレス" %><br />
                  <%= f.email_field :email, autocomplete: "email" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="field">
                  <p><strong>性別</strong></p>
                  <%= f.label :gender, "男性" %>
                  <%= f.radio_button :gender, :男性 %>
                  <%= f.label :gender, "女性" %>
                  <%= f.radio_button :gender, :女性 %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :age, "年齢" %><br />
                  <%= f.number_field :age, min:0, max:100, autocomplete: "age" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :prefectures, "活動地域" %><br>
                  <%= f.collection_check_boxes(:prefecture_ids, Prefecture.all, :id, :name, include_hidden: false) do |area| %>
                    <%= area.label {area.check_box + area.text} %>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :parts, "担当パート" %><br>
                  <%= f.collection_check_boxes(:part_ids, Part.all, :id, :name, include_hidden: false) do |part| %>
                    <%= part.label {part.check_box + part.text} %>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :genres, "好きなジャンル" %><br>
                  <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name, include_hidden: false) do |genre| %>
                    <%= genre.label {genre.check_box + genre.text} %>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <div class="field">
                  <%= f.label :introduction, "自己紹介" %><br>
                  <%= f.text_area :introduction, autocomplete: "introduction", size: "20x10", class: "form-control" %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="actions col-xs-6 col-xs-offset-3">
        <%= f.submit "プロフィール更新", class: "btn btn-default btn-success bs_btn_wide", style: "margin-bottom: 30px;" %>
      </div>
    <% end %>
  </div>
</div>